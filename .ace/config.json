{
  "name": "Ace",
  "version": "4.0.0",
  "description": "Autonomous Creation Engine",

  "orchestration": {
    "mode": "parallel",
    "maxTeamLeads": 3,
    "maxTasksPerPlan": 3,
    "workerTimeout": 300000,
    "retryAttempts": 2,
    "showPlanBeforeExecute": true,
    "autoDetectProjectType": true
  },

  "contextManagement": {
    "maxTokensPerAgent": 200000,
    "freshContextPerMiniAgent": true,
    "preventContextDegradation": true
  },

  "workflow": {
    "mode": "interactive",
    "modes": {
      "interactive": "Pause at checkpoints and decisions",
      "yolo": "Autonomous execution with minimal interruption"
    }
  },

  "projectType": {
    "default": "frontend",
    "current": null,
    "supported": [
      "frontend",
      "backend",
      "fullstack",
      "automation",
      "agentic",
      "library",
      "monorepo",
      "custom"
    ],
    "configFile": "project-types.json"
  },

  "tracks": {
    "alpha": {
      "name": "Foundation",
      "description": "Primary foundation layer - varies by project type",
      "priority": 1,
      "dependsOn": []
    },
    "beta": {
      "name": "Components",
      "description": "Secondary layer - components, services, tools",
      "priority": 2,
      "dependsOn": ["alpha"]
    },
    "gamma": {
      "name": "Integration",
      "description": "Final layer - assembly, orchestration, entry",
      "priority": 3,
      "dependsOn": ["beta"]
    }
  },

  "qualityGates": {
    "typescript": {
      "enabled": true,
      "command": "npx tsc --noEmit"
    },
    "lint": {
      "enabled": false,
      "command": "npm run lint"
    },
    "build": {
      "enabled": true,
      "command": "npm run build"
    },
    "test": {
      "enabled": false,
      "command": "npm run test"
    }
  },

  "git": {
    "enabled": true,
    "autoInit": true,
    "perTaskCommits": true,
    "commitFormats": {
      "initialization": "docs: initialize {project-name} ({phase-count} phases)",
      "taskCompletion": "{type}({phase}-{plan}): {task-name}",
      "planCompletion": "docs({phase}-{plan}): complete {plan-name} plan",
      "handoff": "wip: {phase-name} paused at task {current}/{total}"
    },
    "commitTypes": ["feat", "fix", "test", "refactor", "perf", "chore", "docs"],
    "neverUse": ["git add .", "git add -A", "git add src/"]
  },

  "checkpoints": {
    "enabled": true,
    "types": {
      "verify": "Pause for user verification",
      "decision": "Pause for user decision"
    }
  },

  "deviationRules": {
    "autoFixBugs": true,
    "autoAddCritical": true,
    "autoFixBlockers": true,
    "askAboutArchitectural": true,
    "logEnhancements": true
  },

  "state": {
    "directory": ".ace/planning",
    "stateFile": "STATE.md",
    "projectFile": "PROJECT.md",
    "roadmapFile": "ROADMAP.md",
    "issuesFile": "ISSUES.md",
    "codebaseDir": "codebase",
    "phasesDir": "phases"
  },

  "logging": {
    "directory": ".ace/state",
    "verbose": true,
    "progressBoard": "progress-board.json"
  },

  "designTokens": {
    "extractFromScreenshot": true,
    "defaults": {
      "colors": {
        "background": "#1a1a2e",
        "backgroundSecondary": "#252542",
        "backgroundTertiary": "#16213e",
        "text": "#ffffff",
        "textMuted": "#9ca3af",
        "accent": "#e94560",
        "accentHover": "#d63d56",
        "success": "#10b981",
        "warning": "#f59e0b",
        "error": "#ef4444",
        "border": "#374151"
      },
      "spacing": {
        "xs": "0.25rem",
        "sm": "0.5rem",
        "md": "1rem",
        "lg": "1.5rem",
        "xl": "2rem",
        "2xl": "3rem"
      },
      "borderRadius": {
        "sm": "0.25rem",
        "md": "0.375rem",
        "lg": "0.5rem",
        "xl": "0.75rem",
        "2xl": "1rem",
        "full": "9999px"
      }
    }
  }
}
